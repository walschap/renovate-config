{
    "extends": ["config:base"],
    "branchPrefix": "renovate_",
    "exposeAllEnv": true,
    "packageRules": [
        {
            "managers": ["gradle"],
            "registryUrls": ["https://artifactory.hootops.com/artifactory/hootsuite-mvn"]
        },
        {
            "managers": ["docker", "dockerfile", "docker-compose"],
            "updateTypes": ["minor", "patch", "digest"],
            "automerge": true,
            "automergeType": "branch"
        },
        {
            "matchPackageNames": ["docker-registry.hootops.com/hootsuite/sc-binlog-publisher","docker-registry.hootops.com/hootsuite/sc-kafka-development","docker-registry.hootops.com/hootsuite/sc-mysql-development"],
            "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(-.*)?$"
        }
    ],
    "dockerfile": {
        "reviewers": [
            "johan_vandeweerd"
        ]
    },
    "gradle": {
        "versionScheme": "docker"
    }
}
