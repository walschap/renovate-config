{
    "extends": ["config:base"],
    "branchPrefix": "renovate_",
    "exposeAllEnv": true,
    "packageRules": [
        {
            "managers": ["gradle"],
            "registryUrls": ["https://artifactory.hootops.com/artifactory/hootsuite-mvn"]
        },
        {
            "managers": ["docker", "dockerfile", "docker-compose"],
            "updateTypes": ["minor", "patch", "digest"],
            "automerge": true,
            "automergeType": "branch"
        }
    ],
    "dockerfile": {
        "reviewers": [
            "kristof_lemmens",
            "johan_vandeweerd"
        ]
    },
    "gradle": {
        "versionScheme": "docker"
    }
}
